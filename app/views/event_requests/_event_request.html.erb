<% requestee = User.find(event_request.user_id) %>
<li>
  <%= link_to requestee.username, "/users/#{requestee.username}" %> 
  - [
    <%= 
      link_to "Accept", 
        event_rsvp_path(user_id: requestee.id, event_id: event_request.event_id), 
        data: { turbo_method: "POST", turbo_confirm: "Are you sure you want to accept #{requestee.username}'s request to join this event?" } 
    %>
  ][
    <%=
      link_to "Deny", event_request_path(user_id: event_request.user_id, event_id: event_request.event_id), data: { turbo_method: "DELETE", turbo_confirm: "Are you sure you want to deny #{requestee.username}'s request to join this event?"}
    %>
  ]
</li>
